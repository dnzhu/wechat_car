/*
*轮播
*/
page swiper{
  height: 430rpx;
  margin:100rpx 0rpx 0rpx 0rpx;
}
.slide-image{    
    display: inline;
}
.textindex{
    position: absolute;
    top :20px;
    color: red;
}
/*
*列表
*/
.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
}
.weui_cell_hd{
  display: inline-block;
  width: 20%;
  height: 50px;
  margin-right: 5px;
}
.weui_cell_hd image{
  width: 100%;
  height: 100%;
  vertical-align: -2px;
}
.weui_cell_bd{
  display: inline-block;
  width:80%;
}
.weui_cell_bd_p{
  font-size: 14px;
  color: #939393;
}
.weui_cell_bd_other{
  display: inline-block;
  margin-top: 10px;
  font-size: 12px;
  color: #939393;
  width:100%;
}
.node-date{
  display: inline-block;
  width:33%;
}
.node-msg{
  display: inline-block;
  width:33%;
  text-align: center;
}
.node-cat{
  display: inline-block;
  width:33%;
  text-align: right;
}